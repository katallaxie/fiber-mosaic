    "@web/dev-server": "^0.3.0",
    "concurrently": "^5.3.0",
    "eslint": "^8.44.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-jest": "^27.2.3",
    "eslint-plugin-lit": "^1.8.3",
    "eslint-plugin-prettier": "^5.0.0",
